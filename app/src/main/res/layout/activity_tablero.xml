<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TableroActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TABLERO"
        android:textStyle="bold"
        android:fontFamily="@font/login"
        android:textSize="35dp"
        android:textColor="@color/color_morado"
        android:layout_marginTop="12dp"
        android:layout_gravity="center|top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:elevation="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_marginTop="84dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#09AA8C"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginLeft="12dp"
                android:text="Próxima Cita"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="12dp"
                android:text="No hay citas futuras"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:elevation="20dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical"
        android:layout_marginTop="200dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#09AA8C"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginLeft="12dp"
                android:text="Recordatorio"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="12dp"
                android:text="No hay recordatorio"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:elevation="20dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical"
        android:layout_marginTop="315dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#09AA8C"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginLeft="12dp"
                android:text="Última ciata"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="12dp"
                android:text="No hay citas pasadas"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:elevation="20dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical"
        android:layout_marginTop="430dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#09AA8C"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginLeft="12dp"
                android:text="Peso e IMC"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_height="match_parent">
            <EditText
                android:layout_width="90dp"
                android:layout_height="42dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"
                android:text="15 jun. 2023"
                android:textSize="13dp" />

            <EditText
                android:layout_width="90dp"
                android:layout_height="42dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:hint="Peso en Kg"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>